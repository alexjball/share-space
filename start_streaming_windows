# https://trac.ffmpeg.org/wiki/Capture/Desktop
ffmpeg -f dshow -video_size 1920x1080 -framerate 30 -thread_queue_size 64 \
    -i video="UScreenCapture":audio="Stereo Mix" \
    -c:v libx264 -preset fast -pix_fmt yuv420p -s 1280x720 -c:a mp3 \
    -b:a 160k -ar 44100 -threads 0 -f flv rtmp://localhost/triple/stream
